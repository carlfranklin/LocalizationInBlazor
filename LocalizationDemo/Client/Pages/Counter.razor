@page "/counter"

<PageTitle>@ResourceStrings.CounterTitle</PageTitle>

<h1>@ResourceStrings.CounterTitle</h1>

<p role="status">@ResourceStrings.CounterText @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@ResourceStrings.CounterButton</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}